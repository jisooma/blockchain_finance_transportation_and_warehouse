<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.fisco.bcos.mapper.OrderMapper">
    <select id="queryOrderBySupplier" resultType="Order">
            select * from `order`
            where supplier= #{supplier};
    </select>
    <select id="queryOrderByBuyer" resultType="Order">
            select * from `order`
            where buyer= #{buyer};
    </select>
    <select id="queryAllOrder" resultType="Order">
            select * from `order`;
    </select>
    <select id="queryOrderBySupplierAndStatus" resultType="Order">
            select * from `order`
             where supplier= #{supplier} and status=#{status};
    </select>
    <select id="queryOrderByBuyerAndStatus" resultType="Order">
            select * from `order`
             where buyer= #{buyer} and status=#{status};
    </select>
    <select id="queryOrderById" resultType="Order">
            select * from `order`
             where id=#{id};
    </select>
    <select id="queryOrderByUUId" resultType="Order">
            select * from `order`
             where uuid=#{uuid};
    </select>
    <insert id="addOrder" parameterType="Order">
        insert into `order`(uuid, supplier, buyer, status,orderTime,remark)
        values (#{uuid},#{supplier},#{buyer},#{status},#{orderTime},#{remark})
    </insert>
    <update id="updateOrder" parameterType="Order">
        update `order` set uuid=#{uuid},supplier=#{supplier},buyer=#{buyer},status=#{status},totalMoney=#{totalMoney},orderTime=#{orderTime} where id=#{id};
    </update>
    <delete id="deleteOrder" parameterType="int">
            delete from `order`
            where id=#{id}
    </delete>
</mapper>