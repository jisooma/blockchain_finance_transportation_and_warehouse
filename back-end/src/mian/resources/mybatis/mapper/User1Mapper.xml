<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.fisco.bcos.mapper.User1Mapper">
        <select id="queryByType" resultType="User1">
            select * from user
             where  type =#{type};
        </select>
       <select id="queryByStatusAndType" resultType="User1">
            select * from user
            where status=#{status} and type = #{type};
        </select>
        <select id="login"  resultType="User1">
            select * from user
            where name=#{name} and pwd =#{password} and type = #{type};
        </select>
    <select id="findByName"  resultType="User1">
            select * from user
            where name=#{name};
        </select>
    <insert id="addUser" parameterType="User1" >
        insert into user(type, name, pwd, bal, status, address,privateKey)
        values (#{type},#{name},#{password},#{bal},#{status},#{addr},#{privateKey})
    </insert>
    <update id="updateUser" parameterType="User1">
            update user set type=#{type},name=#{name},pwd=#{password},bal=#{bal},status=#{status},address=#{addr},privateKey=#{privateKey}
             where ID=#{id};
      </update>
        <delete id="deleteUser" parameterType="int">
            delete from user where ID=#{id}
        </delete>
</mapper>